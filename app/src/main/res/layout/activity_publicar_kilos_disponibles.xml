<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activitys.ModuloMisPublicaciones.PublicarViajeActivity.PublicarKilosDisponibles">
    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/purple_700"
            android:orientation="vertical"
            >

        </LinearLayout>
        <TextView
            android:id="@+id/txtdetallesfecha"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="Â¿Cuantos kilos llevas disponibles para este viaje?"
            android:textColor="#0B300C"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/btnmenos"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_weight="1"
                android:src="@drawable/ic_menos"/>
            <TextView
                android:id="@+id/txtcontador"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textColor="#0B300C"
                android:textAlignment="center"
                android:textSize="45dp"/>

            <ImageView
                android:id="@+id/btnmas"
                android:layout_weight="1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_maskilos"/>

        </LinearLayout>



    </LinearLayout>
    <Button
        android:id="@+id/btnnext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/btn_bottom_redonder"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CirculeImageback"
        android:layout_width="40dp"
        android:layout_margin="10dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_bak"
        android:layout_gravity="left|top"
        app:civ_border_color="#f0f0f0"

        app:civ_border_width="3dp"
        >

    </de.hdodenhof.circleimageview.CircleImageView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>