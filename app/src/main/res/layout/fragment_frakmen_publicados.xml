<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E6E6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activitys.fragmentos.Viajescercadeti">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></ImageView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reci"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/verr"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="270dp"
            android:layout_height="270dp"
            android:layout_gravity="center|top"
            android:src="@drawable/publicar"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nofun"
            android:text="Transporta paquetes de otras personas y gana dinero"
            android:textSize="25dp"
            android:textColor="#083511"
            android:textAlignment="center"

            android:layout_marginLeft="20dp"

            android:textStyle="bold"/>
        <Button
            android:id="@+id/publi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Publicar mi viaje"/>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/verrr"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="vertical">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center|top"
            android:src="@drawable/nofound"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/nofunn"
            android:text="No hay viajes cerca de ti :("
            android:textSize="25dp"
            android:textColor="#083511"
            android:textAlignment="center"

            android:layout_marginLeft="20dp"

            android:textStyle="bold"/>



    </LinearLayout>


</FrameLayout>